{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/ZHUOCHENCN/Project-2/main/data/1_ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ZHUOCHENCN/Project-2/main/data/1_per_capita_energy.csv"
        },
        "key": "Entity",
        "fields": ["EnergyConsumptionPerCapita(kWh)"]
        
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape", "stroke": "whitesmoke"},
  "encoding": {
    "color": {
      "field": "EnergyConsumptionPerCapita(kWh)",
      "type": "quantitative",
      "scale": {
        "type": "threshold", 
        "domain":[2000, 25000, 50000,100000],
        "range":["#c68c53","#ac7339", "#86592d", "#604020", "#392613"]
        },
      "title": "Energy Use (KWh)"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title":
      "Country"},
      {"field": "EnergyConsumptionPerCapita(kWh)", "type":
      "quantitative", "format":".2f", "title": "Enery (KWh)"}
    ]
  },
  "config": {
      "background":"",
  "view": {
     "stroke": "transparent"
  }
}
}